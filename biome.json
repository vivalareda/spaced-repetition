{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.next",
      "!**/dist",
      "!**/.turbo",
      "!**/dev-dist",
      "!**/.zed",
      "!**/.vscode",
      "!**/routeTree.gen.ts",
      "!**/src-tauri",
      "!**/.nuxt",
      "!bts.jsonc",
      "!**/.expo",
      "!**/.wrangler",
      "!**/.alchemy",
      "!**/.svelte-kit",
      "!**/wrangler.jsonc",
      "!**/.source",
      "!**/apps/native",
      "!**/src/components/ui/*",
      "!**/apps/web/src/index.css",
      "!**/apps/web/src/routeTree.gen.ts",
      "!**/packages/backend/convex/_generated/*"
    ]
  },
  "linter": {
    "rules": {
      "performance": {
        "noImgElement": "off"
      }
    }
  },
  "extends": ["ultracite"]
}
